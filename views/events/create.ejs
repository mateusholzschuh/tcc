<%- include('../partials/header') %>

<div class="grid-container grid-container--1col grid-container--footer grid-container--no-padd">
    <div class="grid-col grid-col--container">
        <section class="generals-form gen-settings--full" data-preload="" style="opacity: 1;">

            <form method="POST" action="./" accept-charset="UTF-8" class="form--hor">
                <!-- <input name="id" type="hidden" value=""> -->
                <fieldset name="inputs">
                    <legend>Detalhes do Evento</legend>
                    <div class="form-block " role="">
                            <% if (locals.errors) { 
                                errors.forEach(error => { %>
                            <div class="col-group">
                                <div class="col">
                                    <p class="alert alert alert--glow alert--error alert--md alert--border mb20">
                                        <%- error %></p>
                                </div>
                            </div>
                            <% })
                              } %>
                        <div class="col-group ">
                            <!--  col-dt-4 col-ld-3 -->
                            <div class="col-mb-8 col-6 col-dt-4 col-ld-3">
                                <label for="name" class="form-block__name">Nome</label>
                            </div>
                            <!--  col-dt-10 col-ld-4 -->
                            <div class="col-mb-16 col-18 col-dt-10 col-ld-8">
                                <div class="input-field ">
                                    <input class="form-control" name="name" type="text" value="<%- locals.form ? form.name : '' %>" id="name" required>
                                </div>
                                <span id="name_error" class="error nopadding">

                                </span>
                            </div>
                        </div>
                        <div class="col-group ">
                            <div class="col-mb-8 col-6 col-dt-4 col-ld-3 ">
                                <label class="form-block__name">&nbsp;</label>
                            </div>
                            <div class="col-mb-16 col-16 col-dt-16 col-ld-16">
                                <div class="input-field__desc">
                                    O campo nome é obrigatório
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-block " role="">
                        <div class="col-group ">
                            <div class="col-mb-8 col-6 col-dt-4 col-ld-3">
                                <label for="name" class="form-block__name">Local</label>
                            </div>
                            <div class="col-mb-16 col-18 col-dt-10 col-ld-8">
                                <div class="input-field ">
                                    <input class="form-control" name="location" type="text" value="<%- locals.form ? form.location : '' %>" id="name" required>
                                </div>
                                <span id="name_error" class="error nopadding">

                                </span>
                            </div>
                        </div>
                        <div class="col-group ">
                            <div class="col-mb-8 col-6 col-dt-4 col-ld-3 ">
                                <label class="form-block__name">&nbsp;</label>
                            </div>
                            <div class="col-mb-16 col-16 col-dt-16 col-ld-16">
                                <div class="input-field__desc">
                                    O campo local é obrigatório
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-block">
                        <div class="col-group">

                            <div class="col-mb-8 col-6 col-dt-4 col-ld-3 ">
                                <label class="form-block__name">Data inicio</label>
                            </div>
                            <div class="col-mb-16 col-18 col-dt-10 col-ld-8">
                                <div class="input-field datepicker-icon">
                                    <input data-alt-datetimepicker="true" placeholder="Data do inicio do evento" name="startDate"
                                        value="<%- locals.form ? form.startDate : '' %>" id="startDate" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-group ">
                            <div class="col-mb-8 col-6 col-dt-4 col-ld-3 ">
                                <label class="form-block__name">&nbsp;</label>
                            </div>
                            <div class="col-mb-16 col-16 col-dt-16 col-ld-16">
                                <div class="input-field__desc">
                                    Este campo é obrigatório
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-block">
                        <div class="col-group">

                            <div class="col-mb-8 col-6 col-dt-4 col-ld-3 ">
                                <label class="form-block__name">Data fim</label>
                            </div>
                            <div class="col-mb-16 col-18 col-dt-10 col-ld-8">
                                <div class="input-field datepicker-icon">
                                    <input data-alt-datetimepicker="true" placeholder="Data final do evento" name="finishDate"
                                        value="<%- locals.form ? form.finishDate : '' %>" id="finishDate" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-group ">
                            <div class="col-mb-8 col-6 col-dt-4 col-ld-3 ">
                                <label class="form-block__name">&nbsp;</label>
                            </div>
                            <div class="col-mb-16 col-16 col-dt-16 col-ld-16">
                                <div class="input-field__desc">
                                    Este campo é obrigatório
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Turnos*</legend>
                    <div class="form-block">
                        <div class="col-group">
                            <div class="col-mb-8 col-6 col-dt-4 col-ld-3">
                                <label class="form-block__name">Manhã</label>
                            </div>
                            <div class="col-mb-16 col-18 col-dt-10 col-ld-8">
                                <div class="input-field switchbox">
                                    <label class="switch">
                                        <input class="switch-checkbox" type="checkbox" name="periods[morning]" <%= locals.form ? form.periods.morning ? 'checked' : '' : '' %>>
                                        <span class="switch-container"><span class="switch-handle"></span></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-block">
                        <div class="col-group">
                            <div class="col-mb-8 col-6 col-dt-4 col-ld-3">
                                <label class="form-block__name">Tarde</label>
                            </div>
                            <div class="col-mb-16 col-18 col-dt-10 col-ld-8">
                                <div class="input-field switchbox">
                                    <label class="switch">
                                        <input class="switch-checkbox" type="checkbox" name="periods[afternoon]" <%= locals.form ? form.periods.afternoon ? 'checked' : '' : '' %>>
                                        <span class="switch-container"><span class="switch-handle"></span></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-block">
                        <div class="col-group">
                            <div class="col-mb-8 col-6 col-dt-4 col-ld-3">
                                <label class="form-block__name">Noite</label>
                            </div>
                            <div class="col-mb-16 col-18 col-dt-10 col-ld-8">
                                <div class="input-field switchbox">
                                    <label class="switch">
                                        <input class="switch-checkbox" type="checkbox" name="periods[night]" <%= locals.form ? form.periods.night ? 'checked' : '' : '' %>>
                                        <span class="switch-container"><span class="switch-handle"></span></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <div class="app-content__footer">
                    <div class="btn-group">
                        <a href="./" class="btn btn--md btn--default mdl-button mdl-js-button"
                            data-upgraded=",MaterialButton">Voltar</a>

                        <button class="btn btn--md btn--primary mdl-button mdl-js-button mdl-js-ripple-effect"
                            type="submit" data-upgraded=",MaterialButton,MaterialRipple">Salvar<span
                                class="mdl-button__ripple-container"><span class="mdl-ripple"></span></span></button>

                    </div>
                </div>
            </form>

        </section>
    </div>
</div>

<%- include('../partials/footer') %>