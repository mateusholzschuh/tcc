<%- include('../header') %>
<section class="generals-form">
    <h1>Editar <u>
            <%- event.name %></u></h1>
    <form action="./edit" method="post">
        <fieldset name="inputs">
            <a name="AntaresInputs" id="AntaresInputs">
                <legend>Dados Gerais</legend>
            </a>
            <div class="form-block">
                    <% if (locals.errors) { 
                        errors.forEach(error => { %>
                    <div class="col-group">
                        <div class="col">
                            <p class="alert alert alert--glow alert--error alert--md alert--border mb20">
                                <%- error %></p>
                        </div>
                    </div>
                    <% })
                      } %>
                <div class="col-group">
                    <div class="col-mb-8 col-6">
                        <label class="form-block__name">Nome</label>
                    </div>
                    <div class="col-mb-16 col-18">
                        <div class="input-field">
                            <input type="text" placeholder="Nome do evento" value="<%- event.name %>" name="name">
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-block">
                <div class="col-group">
                    <div class="col-mb-8 col-6">
                        <label class="form-block__name as-fs">Descrição</label>
                    </div>
                    <div class="col-mb-16 col-18">
                        <div class="input-field">
                            <textarea class="" name="description" cols="30" rows="5"
                                placeholder="Breve descrição do evento"><%- event.description %></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-block">
                <div class="col-group">
                    <div class="col-mb-8 col-6">
                        <label class="form-block__name">Local do evento</label>
                    </div>
                    <div class="col-mb-16 col-18">
                        <div class="input-field">
                            <input type="text" placeholder="Localização do evento" name="location" value="<%- event.location %>">
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-block">
                <div class="col-group">
                    <div class="col-mb-8 col-6">
                        <label class="form-block__name">Total de dias do evento</label>
                    </div>
                    <div class="col-mb-16 col-18">
                        <div class="input-field">
                            <input type="number" name="days" placeholder="Número de dias do evento" value="<%- event.days %>"
                                min="1">
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-block">
                <div class="col-group">
                    <div class="col-mb-8 col-6">
                        <label class="form-block__name">Total de horas do evento</label>
                    </div>
                    <div class="col-mb-16 col-18">
                        <div class="input-field">
                            <input type="number" name="hours" placeholder="Número de horas do evento" value="<%- event.hours %>"
                                min="1">
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-block">
                <div class="col-group">

                    <div class="col-mb-8 col-6">
                        <label class="form-block__name">Data inicial</label>
                    </div>
                    <div class="col-mb-16 col-18">
                        <!-- <div class="input-field datepicker-icon">
                            <input data-datepicker="true" placeholder="Data inicial do evento" name="datepicker"
                                required="" readonly="" value="<%- event.startDate %>">
                        </div> -->
                        <div class="input-field datepicker-icon">
                            <input data-alt-datetimepicker="true" name="startDate"
                                value="<%- moment(event.startDate).format('DD/MM/YYYY - HH:mm') %>"
                                placeholder="Data inicial do evento" type="datetime" required>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-block">
                <div class="col-group">

                    <div class="col-mb-8 col-6">
                        <label class="form-block__name">Data final</label>
                    </div>
                    <div class="col-mb-16 col-18">
                        <!-- <div class="input-field datepicker-icon">
                            <input data-datepicker="true" placeholder="Data final do evento" name="datepicker"
                                required="" readonly="" value="<%- event.finishDate %>">
                        </div> -->
                        <div class="input-field datepicker-icon">
                            <input data-alt-datetimepicker="true" name="finishDate"
                                value="<%- moment(event.finishDate).format('DD/MM/YYYY - HH:mm') %>"
                                placeholder="Data final do evento" type="datetime" required>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-block">
                <div class="col-group">
                    <div class="col-mb-8 col-6">
                        <label class="form-block__name">Evento Finalizado</label>
                    </div>
                    <div class="col-mb-16 col-18">
                        <div class="input-field switchbox">
                            <label class="switch">
                                <input class="switch-checkbox" type="checkbox" <%= event.finished ? 'checked' : '' %> name="finished">
                                <span class="switch-container"><span class="switch-handle"></span></span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

        </fieldset>
        <fieldset>
            <legend>Configurações API</legend>            
            <div class="form-block">
                <div class="col-group">
                    <div class="col-mb-8 col-6">
                        <label class="form-block__name">Token</label>
                    </div>
                    <div class="col-mb-16 col-18">
                        <div class="input-field">
                            <input type="text" placeholder="Token de acesso" name="token" value="<%- event.api.token %>">
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-block">
                <div class="col-group">
                    <div class="col-mb-8 col-6">
                        <label class="form-block__name"><strong>API GERAL</strong></label>
                    </div>
                    <div class="col-mb-16 col-18">
                        <div class="input-field switchbox">
                            <label class="switch">
                                <input class="switch-checkbox" type="checkbox" <%= event.api ? event.api.global ? 'checked' : '' : '' %> name="apiGlobal">
                                <span class="switch-container"><span class="switch-handle"></span></span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-block">
                <div class="col-group">
                    <div class="col-mb-8 col-6">
                        <label class="form-block__name">Inscrições</label>
                    </div>
                    <div class="col-mb-16 col-18">
                        <div class="input-field switchbox">
                            <label class="switch">
                                <input class="switch-checkbox" type="checkbox" <%= event.api ? event.api.enroll ? 'checked' : '' : '' %> name="apiEnroll">
                                <span class="switch-container"><span class="switch-handle"></span></span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-block">
                <div class="col-group">
                    <div class="col-mb-8 col-6">
                        <label class="form-block__name">Verificador de inscrição</label>
                    </div>
                    <div class="col-mb-16 col-18">
                        <div class="input-field switchbox">
                            <label class="switch">
                                <input class="switch-checkbox" type="checkbox" <%= event.api ? event.api.check ? 'checked' : '' : '' %> name="apiCheck">
                                <span class="switch-container"><span class="switch-handle"></span></span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-block">
                <div class="col-group">
                    <div class="col-mb-8 col-6">
                        <label class="form-block__name">Listar palestras</label>
                    </div>
                    <div class="col-mb-16 col-18">
                        <div class="input-field switchbox">
                            <label class="switch">
                                <input class="switch-checkbox" type="checkbox" <%= event.api ? event.api.getLectures ? 'checked' : '' : '' %> name="apiLectures">
                                <span class="switch-container"><span class="switch-handle"></span></span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-block">
                <div class="col-group">
                    <div class="col-mb-8 col-6">
                        <label class="form-block__name">Listar oficinas</label>
                    </div>
                    <div class="col-mb-16 col-18">
                        <div class="input-field switchbox">
                            <label class="switch">
                                <input class="switch-checkbox" type="checkbox" <%= event.api ? event.api.getWorkshops ? 'checked' : '' : '' %> name="apiWorkshops">
                                <span class="switch-container"><span class="switch-handle"></span></span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-block">
                <div class="col-group">
                    <div class="col-mb-8 col-6">
                        <label class="form-block__name">Listar inscritos</label>
                    </div>
                    <div class="col-mb-16 col-18">
                        <div class="input-field switchbox">
                            <label class="switch">
                                <input class="switch-checkbox" type="checkbox" <%= event.api ? event.api.getEnrolleds ? 'checked' : '' : '' %> name="apiEnrolleds">
                                <span class="switch-container"><span class="switch-handle"></span></span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
        <div class="app-content__footer">
            <div class="btn-group">
                <button class="btn btn--md btn--primary mdl-button mdl-js-button mdl-js-ripple-effect"
                    type="submit">Salvar</button>
                <a class="btn btn--md btn--default mdl-button mdl-js-button mdl-js-ripple-effect">Cancelar</a>
            </div>
        </div>
    </form>

</section>
<%- include('../footer') %>