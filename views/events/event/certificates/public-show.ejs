<!DOCTYPE html>
<html lang="pt-BR">


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="user-scalable=no,width=device-width,initial-scale=1,maximum-scale=1">
    <title>
        Validar Certificado
    </title>
    <meta name="theme-color" content="#02A8F3">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link rel="icon" sizes="32x32" href="/img/theme/antares/favicon/favicon-32.png">
    <link rel="icon" sizes="192x192" href="/img/theme/antares/favicon/favicon-192.png">
    <!-- Chrome, Firefox OS and Opera -->
    <meta name="theme-color" content="#02A8F3">
    <!-- Windows Phone -->
    <meta name="msapplication-navbutton-color" content="#02A8F3">
    <!-- iOS Safari -->
    <meta name="apple-mobile-web-app-status-bar-style" content="#02A8F3">

    <!-- && manifest -->
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="application-name" content="Antares">
    <meta name="apple-mobile-web-app-title" content="Antares">
    <meta name="description" content="Antares is an open source user management platform developed in cooperation with ModulesGarden. It was designed to revolutionize and streamline the whole process of creating standalone and SaaS applications that are easy to use and scalable to enterprise level.">
    <meta name="robots" content="noindex,nofollow">

    <!-- Preloader -->

    <style>
        [data-preload] {
        opacity: 0;
    }

    .grid-stack-item-content {
        background: #fff;
    }

    .main-sidebar--top .main-menu.main-menu--secondary > li a i, .main-sidebar--top .main-menu.main-menu--primary > li a i{
        font-size: 24px;
        margin-right: 16px;
    }
    aside.main-sidebar {
        width: 98px;
        height: 100vh;
    }
    @media only screen and (min-width: 1024px) {
         .app-content {
            margin-left: 98px;
        }
    }
    .app-content:before {
        -webkit-transition: .3s;
        -o-transition: .3s;
        position: absolute;
        left: 0;
        width: calc(100vw - 98px);
        height: 230px;
        background: #02a8f3;
        content: "";
        opacity: 1;
        transition: .3s;
    }

    #app-wrapper.main-sidebar--top .main-head, #app-wrapper.main-sidebar--top .main-content, #app-wrapper.main-sidebar--top .nav-container, #app-wrapper.main-sidebar--top .submenu section {
        max-width: 1400px;
        margin-left: auto;
        margin-right: auto;
        padding-left: 0;
        padding-right: 0;
    }

    #app-wrapper.main-sidebar--top .main-head--ca.main-head,
    #app-wrapper.main-sidebar--top.main-sidebar--ca .main-content,
    #app-wrapper.main-sidebar--top .main-menu-html--ca .nav-container,
    #app-wrapper.main-sidebar--top .main-menu-html--ca .submenu section {
        max-width: 1152px;
    }

    #app-wrapper.main-sidebar--top .main-menu-html--ca .more-trigger {
        display: none;
    }

    #app-wrapper.main-sidebar--top .main-menu-html--ca .client-area .item-grp-single:nth-child(2) {
        position: relative;
    }

    .badge {
        display: none;
    }
</style>

    <link rel="manifest" href="manifest.json">

    <!-- standard -->
    <link rel="stylesheet" href="/css/external.css">
    <link rel="stylesheet" href="/css/antares.css">
</head>

<body>
    <div class="app-content page-login">
        <!-- <div class="img-logo"></div> -->
        <section class="main-content">
            <div class="login-box">
                <form action="" method="post" data-preload>
                    <fieldset>
                        <h1>Ver meus Certificados</h1>
                        <hr>
                        <p style="margin: .5rem 0">Insira seu CPF abaixo para listar seus certificados</p class="mt-20">
                        <div class="form-block">
                            <% if (locals.message && locals.message != '') { %>
                            <div class="alert alert--success alert--md alert--border alert--noicon mb20" >
                                <i class="alert__icon zmdi zmdi-alert-circle"></i>
                                <span><%- message %></span>
                                <i class="alert__close zmdi zmdi-close"></i>
                            </div>
                            <% } %>
                            <% if (locals.error && locals.error != '') { %>
                            <div class="alert alert--error alert--md alert--border alert--noicon mb20" >
                                <i class="alert__icon zmdi zmdi-alert-circle"></i>
                                <span><%- error %></span>
                                <i class="alert__close zmdi zmdi-close"></i>
                            </div>
                            <% } %>
                        </div>
                        <div class="form-block">
                            <div class="input-field">
                                <div class="mdl-textfield mdl-textfield--AR mdl-js-textfield mdl-textfield--floating-label">
                                    <input class="mdl-textfield__input" type="number" name="cpf" id="cpf" required>
                                    <label class="mdl-textfield__label" for="cpf">Insira seu CPF (somente n√∫meros)</label>
                                </div>
                            </div>
                        </div>
                    </fieldset>

                    <button type="submit" class="btn btn--submit btn--s-extra-large btn--primary mdl-button mdl-js-button mdl-js-ripple-effect">
                            Verificar</button>
                    
                            <a href="/validar-certificado" class="btn btn--link btn--s-extra-large btn--dark mdl-button mdl-js-button mdl-js-ripple-effect" style="margin: 1rem 0;">
                                    Validar certificados</a>
                            
                   
                </form>
                <% if (locals.certificates) { %>
                <div>
                    <h2 style="text-align: center;margin-bottom: 1rem;">Certificados de <%= certificates[0].name %></h2 style="text-align: center;">
                    <% certificates.forEach(c => { %>
                    <div style="border-bottom: 1px solid #eee; padding: .5rem 0;margin-bottom: .25rem;display: flex;justify-content: space-between;">
                        <div>
                            <% x = c.type; c.type = x == 'certificate' ? 'Geral' : x == 'lecture' ? 'Palestrante' : x == 'workshop' ? 'Palestrante (Oficina)' : x == 'wenrolled' ? 'Ouvinte (Oficina)' : '???'%>
                            <h4><%= c.event.name %> <small>(<%= c.type %>)</small></h4>
                            <a href="/validar-certificado/<%= c.key %>" download>Baixar Certificado</a>
                        </div>
                        <p><%= c.createdAt %></p>
                    </div>
                    <% }) %>
                </div>
                <% } %>
            </div>
        </section>
    </div>

    <script type="text/javascript" src="/js/app_cache.js?a13c6ebafdb81e7f8fdf"></script>
    <script type="text/javascript" src="/js/forms_standard.js?a13c6ebafdb81e7f8fdf"></script>
</body>

</html>